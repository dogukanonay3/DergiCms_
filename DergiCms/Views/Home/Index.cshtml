@model List<DergiViewModel>

<div class="row mb-2 mt-3 mb-5 d-flex">
    @foreach (var item in Model)
    {
        <div class="col-md-6">
            <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
                <div class="col p-4 d-flex flex-column position-static">
                    <strong class="d-inline-block mb-2 text-primary">@item.KategoriAdi</strong>
                    <h3 class="mb-0">@item.Adi</h3>
                    <p class="card-text mb-auto">@item.Aciklama</p>
                    <a href="/Home/Sayi/@item.Id" class=" btn btn-success col-md-2" >Sayılar</a>
                </div>
            </div>
        </div>
    }
</div>



